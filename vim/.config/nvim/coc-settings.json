{
  "clangd.semanticHighlighting": false,
  "diagnostic.refreshOnInsertMode": true,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "cuda",
        "objc",
        "objcpp"
      ],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        },
        "highlight": {
          "lsRanges": true
        }
      },
      "rootPatterns": [
        ".ccls-root",
        "compile_commands.json"
      ]
    }
  }
}
